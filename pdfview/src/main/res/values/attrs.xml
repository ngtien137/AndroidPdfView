<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AndroidPdfView">
        <attr name="apdf_page_margin" format="dimension" />
        <attr name="apdf_page_boundaries" format="dimension" />

        <attr name="apdf_vertical_page_extra_margin_horizontal" format="dimension" />
        <attr name="apdf_thumbnail_shadow_color" format="color" />
        <attr name="apdf_horizontal_divider_for_page" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AndroidPdfSeekBar">
        <attr name="aps_orientation">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="aps_bar_color" format="color" />
        <attr name="aps_bar_height" format="dimension" />
        <attr name="aps_bar_cap">
            <enum name="butt" value="0" />
            <enum name="round" value="1" />
        </attr>

        <attr name="aps_progress_color" format="color" />
        <attr name="aps_progress_height" format="dimension" />

        <attr name="aps_thumb_width" format="dimension" />
        <attr name="aps_thumb_height" format="dimension" />
        <attr name="aps_thumb" format="reference" />

        <attr name="aps_indicator_mode">
            <enum name="hidden" value="-1" />
            <enum name="inside_thumb" value="0" />
            <enum name="above_thumb" value="1" />
            <enum name="below_thumb" value="2" />
        </attr>
        <attr name="aps_indicator_total_page" format="boolean" />
        <attr name="aps_indicator_text_size" format="dimension" />
        <attr name="aps_indicator_text_font" format="reference" />
        <attr name="aps_indicator_text_color" format="color" />

        <attr name="aps_indicator_layout_color" format="color" />
        <attr name="aps_indicator_layout_border_color" format="color" />
        <attr name="aps_indicator_layout_size" format="dimension" />

        <attr name="aps_current_page" format="integer" />
        <attr name="aps_total_page" format="integer" />

        <attr name="aps_shadow_color" format="color" />
        <attr name="aps_shadow_radius" format="dimension" />
        <attr name="aps_enable_shadow_for_thumb" format="boolean" />

    </declare-styleable>

</resources>